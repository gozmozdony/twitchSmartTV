{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "jsx": "preserve",
        "jsxFactory": "h",
        "lib": ["es5", "dom", "es2015.promise"],
        "module": "es6",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": false,
        "target": "es5"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
    ],
    "exclude": [
        "node_modules"
    ],
    "files": [
      "shims-tsx.d.ts",
      "shims-vue.d.ts"
    ],
    "typeAcquisition": {
        "enable": true
    }
}
